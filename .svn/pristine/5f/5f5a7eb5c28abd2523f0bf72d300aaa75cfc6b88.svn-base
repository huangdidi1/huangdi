@fontSize:15px;//默认字体
@fontColor:#333;//默认字体颜色：
@btn_color:#24c789;//按钮颜色：
@btn_hoverColor:#24c789;//按钮移入颜色：
@btn_hoverFontColor:#fff;//按钮移入字体颜色：
@btn_border:1px solid #24c789;//按钮边框：
@btn_radius:5px;//按钮的幅度：
@navHoverColor:#1e97a2;//导航栏移入颜色：
@bgColor:#FAFAFA;//背景颜色：
@borderStyle:1px solid #1e97a2;//边框样式
// @borderStyle:1px solid #24c789;//边框样式
.clearfix::after{
    content: "";
    display: block;
    clear: both;
}
*{
    padding: 0;
    margin: 0;
    list-style: none;
    outline: none;
    text-align: center;
    border: none;
    font-size: @fontSize;
    color: @fontColor;
}
html,body{
    width: 1349px;
    background-color: @bgColor;
    // overflow: hidden;
}

header{
    width: 1349px;
    height: 74px;
    h1{
        font-size: 30px;
        width: 160px;
        height: 74px;
        float: left;
        margin-left: 30px;
    }
    a{
        text-decoration: none;
        color: @fontColor;
        font-size: @fontSize;
        
    }
    .sel-page{
        width: 600px;
        float: left;
        margin-left: 60px;
        height: 74px;
        li{
            text-align: center;
            float: left;
            width: 200px;
            line-height: 74px;
            a{
                &:hover{
                    color: @navHoverColor;
                    font-weight: 600;
                }
            }
        }
    }
    .login-jump{
        width: 480px;
        height: 74px;
        float: right;
        li{
            text-align: center;
            float: left;
            width: 140px;
            line-height: 74px;
            img{
                width: 25px;
                height: 25px;
                // position: relative;
                // top:5px;
                // left: 0;
            }
            .person-center-img{
                display: inline-block;
                width: 25px;
                height: 25px;
                background: url('../images/shoppingmall/个人中心.png');
                background-size: 100% 100%;
                position: relative;
                top:5px;
                left: 0;
                border-radius: 50%
            }
            a{
                &:hover{
                    color: @navHoverColor;
                    font-weight: 600;
                }
            }
        }
    }
}

.wrap-box{
    width: 75%;
    background-color: #fff;
    margin: 0 auto;
    overflow: hidden;
    .screen-box{
        width: 100%;
        margin-top: 100px;
        .sel-box{
            width: 30%;
            height: 50px;
            float: left;
            margin-left:20px;
            border-top:@borderStyle; 
            border-bottom:@borderStyle;
            .class-box{
                display: inline-block;
                width: 20%;
                height: 100%;
                .class-list-btn{
                    width: 100%;
                    height: 100%;
                }
            }
            .active{
                color:@navHoverColor;
                font-weight: 600;
            }
            button{
                &:hover{
                    color: #fff;
                    background-color: rgba(30,151,162,.6);
                }
                span{
                    &:hover{
                        color: #fff;
                    }
                }
                width: 20%;
                height: 100%;
                background-color: #fff;
                cursor: pointer;
                
            }
            .class-list{
                width: 64.75px;
                position: absolute;
                top: 226px;
                
                left: 275px;
                background-color: rgba(30,151,162,.6);
                
                display: none;
                li{
                    height: 30px;
                    color: #fff;
                    &:hover{
                        background-color: rgba(255,255,255,.6);
                        color: @navHoverColor;
                    }
                    cursor: pointer;
                }
            }
        }
        .search-box{
            width: 30%;
            height: 50px;
            float: right;
            input{
                height: 30px;
                border:@borderStyle;
            }
            button{
                height: 32px;
                width: 50px;
                border:@borderStyle;
                border-left: none;
                color: #fff;
                background-color: @navHoverColor;
                position: relative;
                left: -5px;
                top:1px;
                cursor: pointer;
            }
        }
    }
    .shop-list-wrap-box{
        width: 100%;
        margin-top: 50px;
        overflow: hidden;
        .shop-list-goods{
            width: 22%;
            height: 360px;
            // border: @borderStyle;
            background: #eee;
            border-radius: 5px;
            float: left;
            margin:20px 1%;
            &:hover{
                box-shadow: 2px 2px 10px #ccc;
            }
            div{
                width: 90%;
                height: 90%;
                // border: 1px solid #ccc;
                margin: 18px 5%;
                img{
                    width: 100%;
                    margin-bottom: 10px;
                    cursor: pointer;
                }
                span{
                    color: #f40;
                    font-weight: 600;
                }
                p{
                    margin-top: 10px;
                    span{
                        font-size: 13px;
                    }
                    .shop-list-sale-volume{
                        color: #c00;
                    }
                    .shop-list-sale-comment{
                        color: @navHoverColor;
                    }
                }
            }
        }
    }
    .page-box{
        width: 100%;
        height: 50px;
        .page-btn-box{
            float: right;
            margin-right: 60px;
            button{
                display: block;
                float: left;
                width: 40px;
                height: 30px;
                background-color: #fff;
                border: 1px solid #ccc;
            }
        }
    }
}