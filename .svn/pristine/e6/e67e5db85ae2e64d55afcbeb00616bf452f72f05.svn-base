.clearfix::after {
  content: "";
  display: block;
  clear: both;
}
* {
  padding: 0;
  margin: 0;
  list-style: none;
  outline: none;
  text-align: center;
  border: none;
  font-size: 15px;
  color: #333;
}
html,
body {
  width: 1349px;
  background-color: #FAFAFA;
}
html,
body {
  width: 1349px;
  background-color: #FAFAFA;
}
header {
  width: 1349px;
  height: 74px;
}
header h1 {
  font-size: 30px;
  width: 160px;
  height: 74px;
  float: left;
  margin-left: 30px;
}
header a {
  text-decoration: none;
  color: #333;
  font-size: 15px;
}
header .sel-page {
  width: 600px;
  float: left;
  margin-left: 60px;
  height: 74px;
}
header .sel-page li {
  text-align: center;
  float: left;
  width: 200px;
  line-height: 74px;
}
header .sel-page li a:hover {
  color: #1e97a2;
  font-weight: 600;
}
header .login-jump {
  width: 480px;
  height: 74px;
  float: right;
}
header .login-jump li {
  text-align: center;
  float: left;
  width: 140px;
  line-height: 74px;
}
header .login-jump li img {
  width: 25px;
  height: 25px;
}
header .login-jump li .person-center-img {
  display: inline-block;
  width: 25px;
  height: 25px;
  background: url('../images/shoppingmall/个人中心.png');
  background-size: 100% 100%;
  position: relative;
  top: 5px;
  left: 0;
  border-radius: 50%;
}
header .login-jump li a:hover {
  color: #1e97a2;
  font-weight: 600;
}
.shop-trolley-wrap-box {
  width: 75%;
  background-color: #fff;
  margin: 0 auto;
  overflow: hidden;
}
.shop-trolley-wrap-box .shop-trolley-title {
  width: 100%;
  height: 50px;
  text-align: left;
  font-size: 20px;
  line-height: 50px;
  font-weight: 600;
  margin-top: 50px;
  border-bottom: 1px solid #1e97a2;
}
.shop-trolley-wrap-box .shop-trolley-goods-title {
  width: 100%;
  height: 50px;
  margin: 30px 0;
}
.shop-trolley-wrap-box .shop-trolley-goods-title li {
  width: 15%;
  height: 50px;
  line-height: 50px;
  float: left;
}
.shop-trolley-wrap-box .shop-trolley-goods-title .goods-detail {
  width: 40%;
}
.shop-trolley-wrap-box .shop-trolley-goods-list {
  width: 100%;
  margin-bottom: 20px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list ul {
  margin-bottom: 30px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list li {
  font-size: 14px;
  width: 15%;
  float: left;
}
.shop-trolley-wrap-box .shop-trolley-goods-list li div {
  width: 100%;
  margin-left: 15px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list li div button {
  width: 40px;
  height: 30px;
  border: 1px solid #1e97a2;
  background-color: #fff;
  float: left;
  cursor: pointer;
}
.shop-trolley-wrap-box .shop-trolley-goods-list li div .goods-sel-btn-num {
  width: 45px;
  height: 28px;
  float: left;
  border: 1px solid #1e97a2;
  border-left: none;
  border-right: none;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail {
  width: 40%;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail div {
  float: left;
  margin: 0;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-sel {
  width: 10%;
  height: 80px;
  line-height: 80px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-sel input {
  width: 20px;
  height: 20px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-img {
  width: 20%;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-img img {
  width: 40px;
  height: 40px;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-describe {
  width: 50%;
  text-align: left;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-detail .single-goods-detail-class {
  width: 20%;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-price {
  font-weight: 600;
}
.shop-trolley-wrap-box .shop-trolley-goods-list .single-goods-sum {
  font-weight: 600;
  color: #f40;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum {
  width: 100%;
  height: 50px;
  margin: 30px 0;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li {
  width: 15%;
  height: 50px;
  line-height: 50px;
  float: left;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li div {
  float: left;
  text-align: center;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li span {
  font-weight: 600;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li .goods-sum-all-sel {
  width: 20%;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li .goods-sum-all-sel input {
  width: 20px;
  height: 20px;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum li .goods-sum-total {
  text-align: left;
  width: 80%;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum .goods-detail {
  width: 40%;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum .goods-sum-price {
  font-weight: 600;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum .goods-sum-price span {
  color: #f40;
}
.shop-trolley-wrap-box .shop-trolley-goods-sum .goods-sum-submit button {
  width: 100%;
  height: 100%;
  background-color: #1e97a2;
  color: #fff;
}
